# Test Bot Configuration
# Copy this to .env.test and fill in your test bot token

# Get a test bot token from @BotFather
TEST_BOT_TOKEN=your_test_bot_token_here

# Your Telegram user ID (to receive test messages)
# Get it from @userinfobot
TEST_USER_ID=your_telegram_user_id

# Optional: Test chat ID (can be same as user ID for private chats)
TEST_CHAT_ID=your_telegram_user_id

# Optional: Base URL for local Bot API server (leave empty for official API)
TEST_BASE_URL=

# Optional: Timeout settings
TEST_READ_TIMEOUT=30

# Optional: Test video URL for integration tests
TEST_VIDEO_URL=https://example.com/video

# Optional: Enable end-to-end tests that require manual interaction
ENABLE_E2E_TESTS=0
